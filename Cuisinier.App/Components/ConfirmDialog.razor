@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-3">@Title</MudText>
        <MudText Typo="Typo.body1" Class="mb-4">@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">@CancelText</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="@Confirm">@ConfirmText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance? MudDialog { get; set; }
    [Parameter] public string Title { get; set; } = "Confirmation";
    [Parameter] public string Message { get; set; } = "Êtes-vous sûr ?";
    [Parameter] public string ConfirmText { get; set; } = "Confirmer";
    [Parameter] public string CancelText { get; set; } = "Annuler";
    [Parameter] public Color Color { get; set; } = Color.Primary;

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private void Confirm()
    {
        MudDialog?.Close(DialogResult.Ok(true));
    }
}

