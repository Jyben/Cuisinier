@using MudBlazor

<div class="page-title-container">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <MudIcon Icon="@Icon" Size="Size.Medium" Color="Color.Primary" Class="page-title-icon" />
    }
    <MudText Typo="Typo.h5" Class="page-title-text">@Title</MudText>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Icon { get; set; } = string.Empty;
}

<style>
    .page-title-container {
        display: flex;
        align-items: center;
        gap: 0.875rem;
        margin-bottom: 2.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--mud-palette-divider, rgba(0,0,0,0.12));
        position: relative;
    }

    .page-title-container::after {
        content: '';
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 60px;
        height: 2px;
        background: var(--mud-palette-primary, #1976d2);
        border-radius: 2px;
    }

    .page-title-icon {
        flex-shrink: 0;
        opacity: 0.9;
    }

    .page-title-text {
        font-weight: 600;
        font-size: 1.5rem;
        color: var(--mud-palette-text-primary);
        margin: 0;
        letter-spacing: -0.01em;
        line-height: 1.3;
    }

    .page-title-container:has(.page-title-icon) {
        gap: 0.875rem;
    }

    .page-title-container:not(:has(.page-title-icon)) {
        gap: 0;
    }
</style>

